<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog id="helloDialog" title="Hello {/recipient/name}">
		<content>
			<core:Icon src="sap-icon://alert" size="4rem" class="sapUiMediumMargin"/>
			<FormattedText htmlText="{i18n>helloFragContent}" class="sapUiSmallMargin sapThemeHighlight-asColor"/>
		</content>
		<beginButton>
			<Button text="{i18n>dialogCloseButtonText}" press=".onCloseDialog"></Button>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>