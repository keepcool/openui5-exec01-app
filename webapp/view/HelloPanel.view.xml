<mvc:View controllerName="com.sap.ieg.cas.msdc.Exec01.controller.HelloPanel" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
		<content>
			<Button text="Say Hello" press=".onOpenDialog" class="sapUiSmallMarginEnd"/>
			<Input value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%"/>
		</content>
	</Panel>
</mvc:View>